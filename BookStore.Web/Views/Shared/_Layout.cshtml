<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Book Store Generator</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BookStore.Web.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/covers.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/gallery.css" asp-append-version="true" />
</head>
<body>
    <header class="bg-light border-bottom py-3 sticky-top">
        <div class="container-fluid">
            <div class="row align-items-center g-3">
                <div class="col-lg-2 col-md-3">
                    <label for="languageSelect" class="form-label mb-1 small text-muted">Language</label>
                    <select id="languageSelect" class="form-select form-select-sm">
                        <option value="en">English (US)</option>
                    </select>
                </div>

                <div class="col-lg-2 col-md-3">
                    <label for="seedInput" class="form-label mb-1 small text-muted">Seed</label>
                    <div class="input-group input-group-sm">
                        <input type="number" id="seedInput" class="form-control" value="58933423">
                        <button class="btn btn-outline-secondary" type="button" id="generateSeed" title="Generate random seed">
                            <i class="bi bi-dice-5"></i>
                        </button>
                    </div>
                </div>

                <div class="col-lg-3 col-md-4">
                    <label for="likesRange" class="form-label mb-1 small text-muted">
                        Likes <span id="likesValue" class="fw-bold">5.0</span>
                    </label>
                    <input type="range" id="likesRange" class="form-range" min="0" max="10" step="0.1" value="5.0">
                </div>

                <div class="col-lg-2 col-md-2">
                    <label for="reviewsInput" class="form-label mb-1 small text-muted">Reviews</label>
                    <input type="number" id="reviewsInput" class="form-control form-control-sm" value="4.7" min="0" step="0.1">
                </div>

                <div class="col-lg-3 col-md-12 text-end">
                    <div class="btn-group" role="group">
                        <button type="button" class="btn btn-primary btn-sm active" id="tableViewBtn">
                            <i class="bi bi-table"></i>
                        </button>
                        <button type="button" class="btn btn-outline-primary btn-sm" id="galleryViewBtn">
                            <i class="bi bi-grid-3x3-gap"></i>
                        </button>
                        <button type="button" class="btn btn-primary btn-sm" id="exportBtn">
                            <i class="bi bi-download"></i>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <main class="container-fluid py-4">
        @RenderBody()
    </main>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>